<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>plainvm entry host</display-name>
    <description>
        This application is responsible for proxying the connection between
        the client and the endpoint.
    </description>
    
    <servlet>
    	<servlet-name>InitializationServlet</servlet-name>
    	<servlet-class>org.mgechev.plainvm.entryhost.InitializationServlet</servlet-class>
    	<load-on-startup>0</load-on-startup>
	</servlet> 

</web-app>